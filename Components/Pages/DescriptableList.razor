	

<div class="card flex-fill h-100 disable-dbl-tap-zoom ">
	<div class="card-header">
		<span class="d-inline-flex align-items-center w-100 gap-1">
			<svg width="1em" fill="currentColor" height="1em">
			  @IconPath
			</svg>

			@Name
		</span>
</div>


	<div class="card-body w-100 p-0">
		<ul class="list-unstyled striped-list">
		  @foreach (IDescriptable item in Descriptables){
		    <li class="w-100 border-0"><Descriptable item="@item" /></li>
		  }
		</ul>
	</div>
</div>



@code {
  [Parameter]
  public string? Name { get; set; }

  [Parameter]
  public IEnumerable<IDescriptable> Descriptables { get; set; }

  protected async override Task OnInitializedAsync() {
		IconPath = Constants.IconMap.GetValueOrDefault(Name.ToLower());
	}
	private MarkupString? IconPath;

}
